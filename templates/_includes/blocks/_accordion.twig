{% set width = block.blockWidth|default('12') %}

<div class="col-span-12 md:col-span-{{ width }} gap-y-8"{% if block.elementId %} id="{{ block.elementId }}"{% endif %}>
    {% for accordionItem in block.accordionWrapper.all() %}
        <details class="accordion-content">
            <summary class="accordion-summary">
                <span class="flex items-center gap-2">
                    <span class="details-plus">
                        <svg class="w-5 h-5">
                            <use xlink:href="/images/icons-public.svg#plus"></use>
                        </svg>
                    </span>
                    <span class="details-minus">
                        <svg class="w-5 h-5">
                            <use xlink:href="/images/icons-public.svg#minus"></use>
                        </svg>
                    </span>
                    <span class="accordion-heading">{{ accordionItem.heading }}</span>
                </span>
                {% set icon = accordionItem.accordionIcon.one() %}
                {% if icon %}
                <span class="accordion-icon">
                    {{ image(icon, 'accordionIcon', { class: 'w-8 h-8' }) }}
                </span>
                {% endif %}
            </summary>
            {% if accordionItem.textBlock %}
                <div class="ml-16 mt-4 mb-4">{{ accordionItem.textBlock }}</div>
            {% endif %}
        </details>
    {% endfor %}
</div>
