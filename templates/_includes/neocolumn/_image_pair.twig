<div class="flex justify-center lg:justify-start w-full">
    {% for block in subContent.imagePair.all() %}
        {% set image = block.image.one() %}
        {% switch block.imageSize %}
            {% case 'large' %}
                {% set imageTransform = 'neocolumnimagelarge' %}
            {% case 'medium' %}
                {% set imageTransform = 'neocolumnimagemedium' %}
            {% case 'extraSmall' %}
                {% set imageTransform = 'neocolumnimagexsmall' %}
            {% default %}
                {% set imageTransform = 'neocolumnimagesmall' %}
        {% endswitch %}
        {% if block.imageLink %}
            <a href="{{ block.imageLink }}" class="mr-6 no-external">
                {% else %}
                <div class="mr-6">
                    {% endif %}
                    {{ image(image, imageTransform) }}
                    {% if block.imageLink %}
            </a>
        {% else %}
            </div>
        {% endif %}
    {% endfor %}
</div>
