{% set classes = [] %}
{% if subContent.uppercase %}
    {% set classes = classes|merge(['uppercase']) %}
{% endif %}
{% if subContent.textAlign == 'textCenter' %}
    {% set classes = classes|merge(['text-center']) %}
{% elseif subContent.textAlign == 'textRight' %}
    {% set classes = classes|merge(['text-right']) %}
{% else %}
    {% set classes = classes|merge(['text-center lg:text-left']) %}
{% endif %}
{% if subContent.classes %}
    {% set classes = classes|merge(subContent.classes|explodeClass) %}
{% endif %}

{{ tag('h2', {
    html: subContent.heading|striptags('<strong><em><br><a><sup>')|raw,
    class: classes,
}) }}
