{% extends '_layout' %}

{% if entry is defined and entry.seo is defined %}
    {% set seo = entry.seo.one() %}
{% else %}
    {% set seo = null %}
{% endif %}

{% block page_title %}{% if seo is not null %}{{ seo.pageTitle }} | {% endif %}{% endblock %}

{% block head %}
    {{ parent() }}

    {% if seo is not null %}
        {% include '_includes/_meta.twig' with {
            'title' : seo.pageTitle,
            'description' : seo.metaDescription,
            'image' : seo.ogImage,
            'image_alt' : seo.ogImageAlt,
        } only %}
    {% endif %}
{% endblock head %}
